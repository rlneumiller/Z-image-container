# Use a standard Ubuntu 22.04 base image for CPU operations
FROM ubuntu:22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    python3-dev \
    git \
    wget \
    curl \
    build-essential \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip and install build tools
RUN pip3 install --no-cache-dir --upgrade pip setuptools wheel

# Install PyTorch (CPU-only build is the default with no index URL)
RUN pip install --no-cache-dir torch torchvision torchaudio

# Install diffusers from source (required for Z-Image support)
RUN pip3 install --no-cache-dir git+https://github.com/huggingface/diffusers.git

# Install additional dependencies
RUN pip3 install --no-cache-dir \
    transformers \
    accelerate \
    safetensors \
    pillow \
    numpy \
    huggingface-hub

# Set working directory
WORKDIR /workspace

# Clone Z-Image repository (optional - uncomment if needed)
# RUN git clone github.com /workspace/Z-Image

# Create a directory for model cache
RUN mkdir -p /root/.cache/huggingface

# When not using volume mounts copy the local inference script into the container
# COPY input/generate.py /workspace/generate.py

# And ensure the script is executable
#RUN chmod +x /workspace/generate.py


# Expose any necessary ports (if running as a service)
# EXPOSE 8000

# Set default command
CMD ["bash"]
